<UserControl x:Class="NuGet.PackageManagement.UI.PackageItemDeprecationLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuGet.PackageManagement.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
            DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
      <Style x:Key="DeprecationControlStyle" TargetType="UserControl">
        <Style.Triggers>
          <DataTrigger Binding="{Binding StringFormat}" Value="{x:Null}">
            <Setter Property="Visibility" Value="Collapsed" />
          </DataTrigger>
          <DataTrigger Binding="{Binding DataContext}" Value="{x:Null}">
            <Setter Property="Visibility" Value="Collapsed" />
          </DataTrigger>
        </Style.Triggers>
      </Style>
    </UserControl.Resources>
    <TextBlock x:Name="_textBlock" FontWeight="Bold">
    </TextBlock>
</UserControl>
