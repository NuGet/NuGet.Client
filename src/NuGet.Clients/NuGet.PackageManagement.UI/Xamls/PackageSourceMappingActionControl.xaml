<UserControl x:Class="NuGet.PackageManagement.UI.PackageSourceMappingActionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuGet.PackageManagement.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>
    <CheckBox Name="newMapping" IsChecked="{Binding SelectMappingCheckBoxState}" Checked="NewMapping_Checked" Unchecked="NewMapping_Checked">Add a mapping to the selected source</CheckBox>
    <TextBlock Name="existingMappings">Package already has mappings</TextBlock>
    <Button Name="settingsLink" Click="SettingsButtonClicked">
      <Hyperlink>
        <Run>Package Source Mapping Settings</Run>
      </Hyperlink>
    </Button>
  </Grid>
</UserControl>
